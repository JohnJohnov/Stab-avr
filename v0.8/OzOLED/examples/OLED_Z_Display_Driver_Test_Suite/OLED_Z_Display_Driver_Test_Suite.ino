void setup(){

	OzOled.init();  //initialze Oscar OLED display
	
}


void loop(){

	setDisplayToOriginalState(1);

	OzOled.setNormalDisplay();      //Set display to normal mode (i.e non-inverse mode)
	OzOled.setPageMode();           //Set addressing mode to Page Mode 
	OzOled.printString("Hello World!", 0, 0); //Print the String

	setDisplayToOriginalState(2);

	OzOled.setNormalDisplay();       //Set display to Normal mode
	OzOled.setPageMode();            //Set addressing mode to Page Mode
	OzOled.printNumber((long)123, 0, 0);
	OzOled.printNumber((long)0xFFFF, 0, 0); 
	OzOled.printNumber((long)0xFFFFFFFF, 2, 0);
	OzOled.printNumber((long)-12345, 3, 0);

	setDisplayToOriginalState(3);

	OzOled.setNormalDisplay();       //Set display to Normal mode
	OzOled.setHorizontalMode();      //Set addressing mode to Horizontal Mode
	OzOled.printString("!\"#$%&'()*+,-./0123456789:;<=>?@ABCDEFGHIJKLMNOPQRSTUVWXYZ[\\]^_`abcdefghijklmnopqrstuvwxyz{|}~");  //Print String (ASCII 32 - 126 )

	setDisplayToOriginalState(4);

	OzOled.drawBitmap(OscarLogo, 0, 0, 16, 8);

	setDisplayToOriginalState(5);

	OzOled.setInverseDisplay();          // Set Display to inverse mode
	OzOled.drawBitmap(OscarLogo, 0, 0, 16, 8);

	setDisplayToOriginalState(6);

	OzOled.drawBitmap(OscarLogo, 0, 0, 16, 8);
	OzOled.setActivateScroll(Scroll_Left,4,7,Scroll_5Frames); //Set Scrolling properties to Scroll Left

	setDisplayToOriginalState(7);

	OzOled.drawBitmap(OscarLogo, 0, 0, 16, 8);
	OzOled.setActivateScroll(Scroll_Right,4,7,Scroll_5Frames);  //Set the properties of Horizontal Scrool
	delay(5000);  

  
}


void setDisplayToOriginalState(long testCase){

	delay(5000);

	OzOled.clearDisplay();				// clear the screen and set start position to top left corner
	OzOled.setDeactivateScroll();		// deactivete Scroll (might be activated by previous test case)
	OzOled.setNormalDisplay();			// Non-inverted Display 
	OzOled.setPageMode();				// Page mode to start with
	OzOled.printString("Test Case ", 2, 0);
	OzOled.printNumber(testCase);
	OzOled.printString("Test Case ", 3, 0);
	OzOled.printNumber(testCase);
	OzOled.printString("Test Case ", 4, 0);
	OzOled.printNumber(testCase);
	OzOled.printString("Test Case ", 5, 0);
	OzOled.printNumber(testCase);
	delay(2000);
	OzOled.clearDisplay(); 

}

